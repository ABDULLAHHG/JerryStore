<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AddToCardButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/bg_add_to_card_button</item>
        <item name="android:src">@drawable/ic_add_to_cart</item>
        <item name="android:contentDescription">@string/card_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BodyText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/body</item>
        <item name="android:fontFamily"> @font/ibm_plex_sans_arabic_medium</item>
    </style>
</resources>
